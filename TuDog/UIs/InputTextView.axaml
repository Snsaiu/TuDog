<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uIs="clr-namespace:TuDog.UIs"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="uIs:InputTextViewModel"
             x:Class="TuDog.UIs.InputTextView">
    <Design.DataContext>
        <uIs:InputTextViewModel />
    </Design.DataContext>
    <Grid>
        <AutoCompleteBox HorizontalAlignment="Stretch"
                         MaxLength="{Binding MaxLength}"
                         Watermark="{Binding Watermark}" Text="{Binding Text}"
                         Focusable="True" />
    </Grid>

</UserControl>