<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:demo="clr-namespace:Demo"
             xmlns:extension="clr-namespace:Demo.Extension"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Demo.Views.IconProviderView">
    <StackPanel Spacing="10">
        <TextBlock>Icon 示例</TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Classes="icon" extension:IconAttach.Icon="{x:Static demo:IconFontProvider.Add}" />

            <controls:FontIcon
                FontFamily="{StaticResource iconFont}"
                Glyph="{x:Static demo:IconFontProvider.Export}" />
        </StackPanel>
    </StackPanel>
</UserControl>