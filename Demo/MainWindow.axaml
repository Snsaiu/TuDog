<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:attachs="clr-namespace:TuDog.Attachs;assembly=TuDog"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Demo.MainWindow"
        Title="Demo">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Left" Margin="5">
            <Button Content="等待弹框" Click="OpenWaitingDialog" />
        </StackPanel>
        <ContentControl Margin="5" DockPanel.Dock="Right" attachs:RegionBehavior.Region="mainContainer" />
    </DockPanel>
</Window>